<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/subjects_linear_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:cursorVisible="false"
                android:fontFamily="monospace"
                android:gravity="center_horizontal"
                android:padding="16sp"
                android:text="Subjects"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
            <include
                layout="@layout/subjects_list_items"/>

            <Button
                android:id="@+id/subjects_add_button"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:onClick="addSubjectsView"
                android:text="+" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/labs_linear_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:fontFamily="monospace"
                android:gravity="center_horizontal"
                android:padding="16sp"
                android:text="LABS"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
            <include
                layout="@layout/labs_list_items"/>

            <Button
                android:id="@+id/labs_add_button"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:onClick="addLabsView"
                android:text="+" />

        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/timetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="32sp"
        android:padding="8dp"
        android:text="enter timetable"
        android:textAllCaps="true" />

</RelativeLayout>